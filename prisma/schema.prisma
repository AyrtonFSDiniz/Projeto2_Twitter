// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Seguidores {
  id            Int       @default(autoincrement()) @id
  idSeguidor    Int

}

model Seguindo {
  id Int @default(autoincrement()) @id
  idSeguindo Int
}

model Tweet {
  id            Int       @default(autoincrement()) @id
  texto         String
  emoji         String
  curtidas      Int
  data_postagem String
}

model Usuario {
  id Int @default(autoincrement()) @id
  nome String
  imagem String
  bio String
  nascimento String
  seguidores Seguidores[] @relation(references: [id])
  seguindo Seguindo[] @relation(references: [id])
  criado_em String
  modificado_em String
  tweet Tweet[] @relation(references: [id])
}
